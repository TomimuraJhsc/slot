<div class="container">
    <div class="card">
        <div class="card-header">ホール編集</div>
        <%= form_tag hall_path(@hall), method: :patch do %>
        <div class="form-group">
            <label class="form-label">ホール名</label>
            <input type="text" name="name" value="<%= @hall.name %>" class="form-control" required>
        </div>

        <div class="form-group">
            <label class="form-label">ホールコード</label>
            <input type="text" name="code" value="<%= @hall.code %>" class="form-control" required>
        </div>

        <div class="form-group">
            <label class="form-label">メモ</label>
            <textarea name="memo" class="form-control" placeholder="必要に応じてメモを入力してください"><%= @hall.memo %></textarea>
        </div>

        <div class="btn-group">
            <button type="submit" class="btn btn-primary">更新</button>
            <%= link_to "キャンセル", halls_path, class: "btn btn-secondary" %>
        </div>
        <% end %>
    </div>
</div>